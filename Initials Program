//https://replit.com/@RadiantJoy/Initials-Program
public class Name {
	private String name;
	public Name (String str) {
		name = str;
	}
	public String initials (String name) {
		return String(name.substring(0,1) + "." + name.substring(name.indexOf(" ")+1, name.indexOf(" ")+2) + ".");
	}
}

public class Main  {
	public static void main(String[] args) {
		System.out.println(initials("Angelica Garcia"));
 }
}
